<h1> Welcome Admin </h1>
<h3> Orders </h3>
<article id="Packaged">
  <% Order.where("status = 'Packaged'").each do |order| %>
    <p><%= order.find_user %></p>
    <p><%= order.id %></p>
    <p><%= order.created_at %></p>
