<h1>Admin's merchants index </h1>
<% @merchants.each do |merchant| %>
<article id="merchant-<%= merchant.id%>">
  <h2><%=link_to merchant.name, "/admin/merchants/#{merchant.id}"%></h2>
  <p><%=merchant.address%></p>
  <p><%=merchant.city%></p>
  <p><%=merchant.state%></p>
  <p><%=merchant.zip%></p>
  <% if merchant.status == true %>
    <ul><%= link_to "Disable", "/admin/merchants/#{merchant.id}", method: :patch%>
  <% else %>
    <ul><%= link_to "Enable", "/admin/merchants/#{merchant.id}", method: :patch%>
  <% end %>
  </article>
<%end%>
