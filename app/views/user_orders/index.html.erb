<h1>Profile Orders</h1>

<section class="orders-index">
  <% current_user.orders.each do |order| %>
    <section id="order-<%= order.id %>">
      <p><%= link_to "#{order.id}", "/profile/orders/#{order.id}" %></p>
      <p><%= order.created_at %></p>
      <p><%= order.updated_at %></p>
      <p><%= order.status %></p>
      <p><%= order.total_quantity %></p>
      <p><%= order.grandtotal %></p>
    </section>
    <% end %>
</section>
